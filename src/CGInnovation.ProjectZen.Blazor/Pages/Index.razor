@page "/"
@using Volo.Abp.MultiTenancy

@inherits ProjectZenComponentBase
@inject ICurrentTenant CurrentTenant
@inject AuthenticationStateProvider AuthenticationStateProvider


<div class="container">
    <div class="p-5 text-center">
        <DisplayHeading Size="DisplayHeadingSize.Is4">ZEN Project</DisplayHeading>
       
        <p class="lead px-lg-5 mx-lg-5">@L["LongWelcomeMessage"]</p>

        @if (!CurrentUser.IsAuthenticated)
        {
            <a class="btn btn-outline-primary" href="/authentication/login">
                <i class="fa fa-sign-in-alt"></i> @L["Login"]
            </a>}
        else
        {
            <h2>Welcome @CurrentUser.UserName</h2>
        }
    </div>
        <Image Class="mainimage" src="/images/RiskMonitor.png"/>
</div>
<style>
    .mainimage{
        display:block;
        margin:auto auto;
        width:700px;
        height:auto;
        border-radius:8px;
        box-shadow:initial;
    }
</style>
